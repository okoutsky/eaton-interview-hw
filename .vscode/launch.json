{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) file reading device",
            "type": "cppdbg",
            "request": "launch",
            "program": "/build-Clang 10.0.0-Debug/tools/file_reading_device_tool/file_reading_device_tool",
            "args": [
                "--server-ip",
                "127.0.0.1",
                "--server-port",
                "12345",
                "--device-name",
                "my-laptop",
                "-t",
                "/sys/class/hwmon/hwmon4/temp1_input"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}